

    <p id="notice"><%= notice %></p>

    <h1>Cars</h1>

    <table class="table">
      <thead>
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Number of bids</th>
        <th colspan="4"></th>
      </tr>
      </thead>

      <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.make %>
            <%if car.sold %>
              <i style="color: darkgreen" class="fas fa-check-circle"></i>
            <% end %>

          </td>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td><%= car.bids.count %> - <span class="badge badge-primary"> <%=car.total_bids %> GHS</span></td>
          <td><%= link_to 'Show', car %></td>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
          <td><%= link_to 'Bid Now !', new_car_bid_path(car) %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          <% if car.sold %>
            <td><%= link_to 'Mark as Unsold', mark_as_unsold_path(car),
                            :class => 'btn btn-primary btn-sm'

            %></td>
          <% else %>
            <td><%= link_to 'Mark as Sold', mark_as_sold_path(car),
                            :class => 'btn btn-primary btn-sm'


            %></td>

        <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Car', new_car_path %>
